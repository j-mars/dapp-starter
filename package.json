{
  "name": "dapp-starter",
  "version": "0.1.0",
  "private": true,
  "keywords": [
    "blockchain",
    "ethereum",
    "in-app purchase",
    "erc721",
    "react",
    "redux",
    "javascript",
    "solidity"
  ],
  "author": "Joao Martins",
  "scripts": {
    "coverage": "yarn run test --coverage",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "format:jsx": "prettier --write 'src/**/*.{js,jsx,scss,less}' && yarn lint:eslint --fix",
    "format:prettier": "prettier --write 'src/**/*.{js,jsx,scss,less}'",
    "format": "yarn run format:jsx && yarn run format:css",
    "format:check": "prettier -c 'src/**/*.{js,jsx,scss,less}'",
    "format:css": "stylelint --fix --syntax scss \"src/**/*.scss\"",
    "lint": "yarn run lint:eslint && yarn run lint:css",
    "lint:css": "stylelint --syntax scss \"src/**/*.scss\"",
    "lint:eslint": "eslint 'src/**/*.{js,jsx,scss,less}'"
  },
  "dependencies": {
    "@portis/web3": "^2.0.0-beta.55",
    "@toruslabs/torus-embed": "^1.3.4",
    "@walletconnect/web3-provider": "^1.0.0-beta.47",
    "antd": "^4.2.0",
    "babel-plugin-import": "^1.13.0",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.8.0",
    "fortmatic": "^2.0.6",
    "history": "^4.10.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "squarelink": "^1.1.4",
    "web3": "^1.2.7",
    "web3modal": "^1.6.3"
  },
  "devDependencies": {
    "@atolye15/eslint-config-base": "^1.1.0",
    "@atolye15/stylelint-config": "^1.3.0",
    "@hot-loader/react-dom": "^16.13.0",
    "customize-cra": "^1.0.0-alpha.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "less-loader": "^6.0.0",
    "lint-staged": "^10.2.2",
    "node-sass": "^4.14.0",
    "prettier": "^2.0.5",
    "react-app-rewired": "^2.1.6",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,scss,less}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint"
    ],
    "src/**/*.{scss,less}": [
      "stylelint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "resolutions": {
    "moment": "2.24.0"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.jsx",
      "!src/setupTests.js",
      "!src/components/**/index.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
